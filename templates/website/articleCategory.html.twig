{% extends 'base.html.twig' %}

{% set categoryId = app.request.get('id') %} {# Get Category id from url parameter #}
{% block title %}{{ categories[categoryId - 1] }}{% endblock title %}

{% block body %}
    <div class="container-scroller">
        <div class="content-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card" data-aos="fade-up">
                            <div class="card-body">
                                <div class="aboutus-wrapper">
                                    <div class="col-lg-9 stretch-card grid-margin">
                                        <div class="card">
                                            <div class="card-body">
                                                {% for articleByCategory in articleByCategories %}
                                                    <div class="row">
                                                        <div class="col-sm-4 grid-margin">
                                                            <div class="position-relative">
                                                                <div class="rotate-img">
                                                                    <img
                                                                            src="{{ asset('assets/images/dashboard/home_4.jpg') }}"
                                                                            alt="thumb"
                                                                            class="img-fluid"
                                                                    />
                                                                </div>
                                                                <div class="badge-positioned">
                                                                    <span class="badge badge-danger font-weight-bold"
                                                                    >{{ categories[categoryId - 1] }}</span
                                                                    >
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-8  grid-margin">
                                                            <h3 class="mb-2 font-weight-600">
                                                                <a href="{{ path('website_post', {id: articleByCategory.id}) }}" style="color: black; text-decoration: none">
                                                                    {{ articleByCategory.title }}
                                                                </a>
                                                            </h3>
                                                            <div class="fs-13 mb-2">
                                                                <span class="mr-2">Photo </span>10 Minutes ago
                                                            </div>
                                                            <p class="mb-0">
                                                                <a href="{{ path('website_post', {id: articleByCategory.id}) }}" style="color: black; text-decoration: none">
                                                                    {{ articleByCategory.content | slice(0,100) ~ '....' }}
                                                                </a>
                                                            </p>
                                                        </div>
                                                    </div>
                                                {% endfor %}

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
